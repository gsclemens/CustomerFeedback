@*@model IEnumerable<CustomerFeedback.Models.Survey>*@
@model CustomerFeedback.Models.ViewModels.SurveyVM

@{
    ViewData["Title"] = "Surveys";
    string tableNav = "Actions";
}

<h1>Surveys</h1>

<div class="row justify-content-between">
  <div class="col-lg-6 col-md-3">
    <a asp-action="Create" class="btn btn-success my-2">Create New</a>
  </div>
  <div class="col-lg-6 col-md-9 col-sm-auto">
    <form asp-controller="Surveys" asp-action="Index" method="get">
      <div class="row">
        <div class="col">
          <select asp-for="SurveyCustomerType" asp-items="Model?.CustomerTypes" class="form-control my-2">
            <option value="">All Types</option>
          </select>
        </div>
        <div class="col">
          <input type="text" name="SearchString" class="form-control my-2" placeholder="Search Survey Title" />
        </div>
        <div class="col-2">
            <input type ="submit" value="Filter" class="btn btn-secondary my-2"/>
        </div>
      </div>
    </form>
  </div>
</div>

<table class="table table-sm">
  <thead>
      <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].ExpireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].AdministratorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surveys[0].CustomerTypeId)
        </th>
        <th>
            @Html.DisplayName(tableNav)
        </th>
      </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Surveys) {
      <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdministratorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerTypeId)
        </td>
            <td>
              <div class="row justify-content-between">
                <div class="col text-nowrap">
                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                    <i class="fas fa-pencil-alt text-light"></i>
                  </a> |
                  <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                    <i class="fas fa-list-ul text-light"></i>
                  </a> |
                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                    <i class="fas fa-trash-alt text-light"></i>
                  </a> 
                </div>
              </div>
            </td>
      </tr>
    }
  </tbody>
</table>
